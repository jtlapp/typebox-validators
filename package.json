{
  "name": "typebox-validators",
  "version": "0.2.8",
  "author": "Joseph T. Lapp <arachnojoe@gmail.com>",
  "license": "MIT",
  "description": "TypeBox validators with custom errors, safe error handling, discriminated unions",
  "repository": {
    "type": "git",
    "url": "https://github.com/jtlapp/typebox-validators"
  },
  "keywords": [
    "typebox",
    "validation",
    "errors",
    "error handling",
    "safe",
    "secure",
    "discriminated unions",
    "branded types"
  ],
  "scripts": {
    "clean": "rm -rf node_modules && rm -rf dist",
    "build": "rm -rdf dist && tsc && cp package.json dist && cp README.md dist && cp LICENSE dist",
    "build-docs": "typedoc --options ./typedoc.js ./src/index.ts",
    "build-all": "pnpm build && pnpm build-docs",
    "test": "pnpm test-node && pnpm test-chrome",
    "test-node": "jest",
    "test-chrome": "cross-env PUPPETEER_DISABLE_HEADLESS_WARNING=true jest --config jest.config.chrome.js",
    "test-perf": "ts-node src/test/key-iteration-performance.ts",
    "publish": "pnpm build && (cd dist && npm publish)"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "cross-env": "^7.0.3",
    "jest": "^29.4.3",
    "jest-puppeteer": "^9.0.0",
    "puppeteer": "^20.7.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typedoc": "^0.24.5",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.28.14"
  }
}
