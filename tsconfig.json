{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES6",
    "sourceMap": true,
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "moduleResolution": "node",
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "typebox-validators": ["dist/index.d.ts"],
      "typebox-validators/standard": ["dist/validators/standard/index.d.ts"],
      "typebox-validators/discriminated": [
        "dist/validators/discriminated/index.d.ts"
      ],
      "typebox-validators/heterogeneous": [
        "dist/validators/heterogeneous/index.d.ts"
      ]
    }
  },
  "include": ["*.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["src/test", "dist", "build", "node_modules", "comparison"]
}
